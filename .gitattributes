# Автоматически определять формат для текстовых файлов
* text=auto

# Python файлы - использовать LF
*.py text eol=lf
*.pyw text eol=lf

# JavaScript/TypeScript файлы - использовать LF
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.json text eol=lf

# CSS и HTML - использовать LF
*.css text eol=lf
*.html text eol=lf
*.htm text eol=lf

# Markdown и документация - использовать LF
*.md text eol=lf
*.txt text eol=lf
*.rst text eol=lf

# Конфигурационные файлы - использовать LF
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
*.ini text eol=lf
*.conf text eol=lf

# Shell скрипты - использовать LF
*.sh text eol=lf

# Windows скрипты - использовать CRLF
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Бинарные файлы
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
*.pdf binary
*.zip binary
*.tar binary
*.gz binary

